@model DashboardStatsDto
@{
    ViewData["Title"] = "Dashboard";
}

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stat-card h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1">Total Properties</p>
                        <h3 class="mb-0">@Model.TotalProperties</h3>
                    </div>
                    <div class="icon bg-primary text-white">
                        <i class="fas fa-building"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stat-card h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1">Active Listings</p>
                        <h3 class="mb-0">@Model.ActiveProperties</h3>
                    </div>
                    <div class="icon bg-success text-white">
                        <i class="fas fa-check-circle"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stat-card h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1">Total Users</p>
                        <h3 class="mb-0">@Model.TotalUsers</h3>
                    </div>
                    <div class="icon bg-info text-white">
                        <i class="fas fa-users"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stat-card h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1">Inquiries</p>
                        <h3 class="mb-0">@Model.TotalInquiries</h3>
                        @if (Model.UnreadInquiries > 0)
                        {
                            <small class="text-warning">@Model.UnreadInquiries unread</small>
                        }
                    </div>
                    <div class="icon bg-warning text-white">
                        <i class="fas fa-envelope"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Listing Type Stats -->
<div class="row mb-4">
    <div class="col-md-6 mb-4">
        <div class="card stat-card h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1">Properties For Sale</p>
                        <h3 class="mb-0">@Model.PropertiesForSale</h3>
                    </div>
                    <div class="icon bg-success text-white">
                        <i class="fas fa-dollar-sign"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 mb-4">
        <div class="card stat-card h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1">Properties For Rent</p>
                        <h3 class="mb-0">@Model.PropertiesForRent</h3>
                    </div>
                    <div class="icon bg-info text-white">
                        <i class="fas fa-key"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Recent Properties -->
    <div class="col-lg-7 mb-4">
        <div class="card table-card">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Recent Properties</h5>
                <a asp-controller="Properties" asp-action="Index" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body">
                @if (Model.RecentProperties.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Property</th>
                                    <th>Price</th>
                                    <th>Status</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var property in Model.RecentProperties)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="@(property.MainImageUrl ?? "https://via.placeholder.com/50x50?text=P")" 
                                                     class="rounded me-2" width="50" height="50" style="object-fit: cover;">
                                                <div>
                                                    <strong>@property.Title</strong>
                                                    <br><small class="text-muted">@property.City</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>$@property.Price.ToString("N0")</td>
                                        <td>
                                            <span class="badge bg-@(property.Status == "Active" ? "success" : property.Status == "Pending" ? "warning" : "secondary")">
                                                @property.Status
                                            </span>
                                        </td>
                                        <td>@property.CreatedAt.ToString("MMM dd")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center mb-0">No properties yet</p>
                }
            </div>
        </div>
    </div>

    <!-- Recent Inquiries -->
    <div class="col-lg-5 mb-4">
        <div class="card table-card">
            <div class="card-header bg-white">
                <h5 class="mb-0">Recent Inquiries</h5>
            </div>
            <div class="card-body">
                @if (Model.RecentInquiries.Any())
                {
                    @foreach (var inquiry in Model.RecentInquiries)
                    {
                        <div class="d-flex mb-3 pb-3 border-bottom">
                            <div class="flex-shrink-0">
                                <div class="rounded-circle bg-@(inquiry.IsRead ? "secondary" : "primary") text-white d-flex align-items-center justify-content-center" 
                                     style="width: 40px; height: 40px;">
                                    <i class="fas fa-envelope"></i>
                                </div>
                            </div>
                            <div class="ms-3">
                                <strong>@(inquiry.SenderName ?? "Anonymous")</strong>
                                <p class="mb-0 text-muted small">@inquiry.Subject</p>
                                <small class="text-muted">@inquiry.CreatedAt.ToString("MMM dd, HH:mm")</small>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted text-center mb-0">No inquiries yet</p>
                }
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="card table-card">
    <div class="card-header bg-white">
        <h5 class="mb-0">Quick Actions</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-3 mb-3">
                <a asp-controller="Properties" asp-action="Create" class="btn btn-primary w-100">
                    <i class="fas fa-plus me-2"></i>Add Property
                </a>
            </div>
            <div class="col-md-3 mb-3">
                <a asp-controller="Categories" asp-action="Create" class="btn btn-success w-100">
                    <i class="fas fa-tags me-2"></i>Add Category
                </a>
            </div>
            <div class="col-md-3 mb-3">
                <a asp-controller="Users" asp-action="Index" class="btn btn-info w-100">
                    <i class="fas fa-users me-2"></i>Manage Users
                </a>
            </div>
            <div class="col-md-3 mb-3">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-secondary w-100">
                    <i class="fas fa-globe me-2"></i>View Website
                </a>
            </div>
        </div>
    </div>
</div>
